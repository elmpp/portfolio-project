{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "target": "es5",
    "lib": ["es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": ["src/**/*.ts"],
}
